{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
